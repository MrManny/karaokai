{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:nonOfficeHours",
    ":reviewer(MrManny)",

    "helpers:pinGitHubActionDigests",
    ":labels(dependencies)",
    "npm:unpublishSafe",
    "group:allNonMajor",

    "packages:eslint",
    "packages:jsTest",
    "packages:linters"
  ],

"packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
