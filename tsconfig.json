{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts", "src/utils/test-util.ts"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
